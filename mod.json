{
  "geode": "5.0.1",
  "gd": {
    "win": "2.2081",
    "android": "2.2081",
    "mac": "2.2081",
    "ios": "2.2081"
  },
  "id": "the_bearodactyl.gay-wave-trail",
  "name": "Gay Wave Trail",
  "version": "5.1.3",
  "developer": "The Bearodactyl",
  "description": "make your wave (and kayla) a raging homosexual >:3",
  "tags": ["offline", "customization", "enhancement"],
  "settings": {
    "main-section": {
      "type": "title",
      "name": "Mod Settings",
      "description": "Make kayla gay."
    },
    "enabled": {
      "name": "Enable GWT",
      "type": "bool",
      "description": "Enable the mod",
      "default": true
    },
    "enable-pause-btn": {
      "name": "Enable Pause Menu Button",
      "type": "bool",
      "description": "Enable the quick-settings button in the pause menu",
      "default": true
    },
    "disable-behind-streak": {
      "name": "Disable Behind Streak",
      "type": "bool",
      "description": "Disable the regular trail",
      "default": true
    },
    "trail-brightness": {
      "name": "Trail Brightness",
      "type": "float",
      "default": 1.0,
      "min": 0.1,
      "max": 2.0,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.05,
        "big-arrow-step": 0.1
      },
      "description": "Multiplier for trail brightness"
    },
    "speed": {
      "name": "Color Cycle Speed",
      "type": "float",
      "default": 1,
      "min": 1,
      "max": 100,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.1,
        "big-arrow-step": 1
      },
      "description": "Sets the speed at which the colors of the trail cycle."
    },
    "saturation": {
      "name": "Color Saturation",
      "type": "float",
      "default": 100,
      "min": 1,
      "max": 100,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.1,
        "big-arrow-step": 1
      },
      "description": "The saturation of the colors the wave trail cycles through."
    },
    "trail-size": {
      "name": "Wave Trail Size",
      "type": "float",
      "default": 1.2,
      "min": 0,
      "max": 10,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.1,
        "big-arrow-step": 1
      }
    },
    "pulse-size": {
      "name": "Wave Pulse Size",
      "type": "float",
      "default": 1.2,
      "min": 0,
      "max": 10,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.1,
        "big-arrow-step": 1
      }
    },
    "add-min-width": {
      "name": "Add Min Width",
      "type": "bool",
      "default": true
    },
    "smooth-colors": {
      "name": "Smooth Color Cycling",
      "description": "Smooths the transition between each color",
      "type": "bool",
      "default": true
    },
    "solid-trail": {
      "name": "Solid Trail",
      "type": "bool",
      "description": "Makes the wave trail solid",
      "default": true
    },
    "trail-opacity": {
      "name": "Trail Opacity",
      "type": "int",
      "default": 255,
      "min": 0,
      "max": 255,
      "control": {
        "slider": true
      },
      "description": "Sets the base opacity of the wave trail"
    },
    "editor-trail": {
      "name": "Editor Trail",
      "type": "bool",
      "description": "Enables the wave trail in the editor",
      "default": true
    },
    "persist-trail": {
      "name": "Persist Trail",
      "type": "bool",
      "description": "Disables fading the wave trail out in portals",
      "default": false
    },
    "disable-pulse": {
      "name": "Disable Wave Pulse",
      "type": "bool",
      "description": "Disables the wave trail pulse completely",
      "default": false
    },
    "disable-trail": {
      "name": "Disable the Wave Trail",
      "type": "bool",
      "description": "Disables the wave trail completely",
      "default": false
    },
    "trail-dashing": {
      "name": "Enable Trail Dash Effect",
      "type": "bool",
      "description": "Makes the wave icon rotate when dashing",
      "default": false
    },
    "outline-section": {
      "name": "Wave Outline",
      "type": "title",
      "description": "Wave Outline Settings"
    },
    "wave-outline": {
      "name": "Enable Wave Outline",
      "type": "bool",
      "description": "Enables an outline effect on the wave trail",
      "default": false
    },
    "wave-outline-width": {
      "name": "Wave Outline Width",
      "type": "float",
      "default": 1,
      "min": 0,
      "max": 10,
      "control": {
        "slider": true
      }
    },
    "wave-outline-blur": {
      "name": "Wave Outline Blur",
      "type": "int",
      "default": 0,
      "description": "How blurry should the outline be"
    },
    "wave-outline-opacity": {
      "name": "Wave Outline Opacity",
      "description": "The opacity of the trail outline",
      "type": "int",
      "default": 255,
      "min": 1,
      "max": 255,
      "control": {
        "slider": true
      }
    },
    "outline-colors": {
      "name": "Outline Colors",
      "description": "A list of the colors that the trail outline will cycle through",
      "type": "custom:gaydient-colors",
      "default": [
        {
          "hex": "#5BCEFA",
          "enabled": true,
          "user_added": true
        },
        {
          "hex": "#F5A9B8",
          "enabled": true,
          "user_added": true
        },
        {
          "hex": "#FFFFFF",
          "enabled": true,
          "user_added": true
        },
        {
          "hex": "#F5A9B8",
          "enabled": true,
          "user_added": true
        }
      ]
    },
    "gaydient-section": {
      "name": "The Gaydient",
      "type": "title",
      "description": "A custom trail gradient that you can use as an alternative to the basic rainbow."
    },
    "enable-gaydient": {
      "name": "Enable the Gaydient",
      "type": "bool",
      "default": false,
      "description": "Enables the custom gradient and disables the base rainbow"
    },
    "gaydient-colors": {
      "name": "Gaydient Colors",
      "description": "A list of the colors that the wave trail will cycle through",
      "type": "custom:gaydient-colors",
      "default": [
        {
          "hex": "#5BCEFA",
          "enabled": true,
          "user_added": true
        },
        {
          "hex": "#F5A9B8",
          "enabled": true,
          "user_added": true
        },
        {
          "hex": "#FFFFFF",
          "enabled": true,
          "user_added": true
        },
        {
          "hex": "#F5A9B8",
          "enabled": true,
          "user_added": true
        }
      ]
    },
    "separate-player-colors": {
      "name": "Independent Player Colors",
      "type": "bool",
      "default": false,
      "description": "Allow player 1 and player 2 to have completely different color cycles"
    },
    "p2-gaydient-colors": {
      "name": "Player 2 Gaydient Colors",
      "description": "Custom gradient colors for player 2 (when independent colors enabled)",
      "type": "custom:gaydient-colors",
      "default": [
        {
          "hex": "#FF6B9D",
          "enabled": true,
          "user_added": true
        },
        {
          "hex": "#C44569",
          "enabled": true,
          "user_added": true
        },
        {
          "hex": "#786FA6",
          "enabled": true,
          "user_added": true
        }
      ]
    },
    "tilted-section": {
      "name": "Tilted Trail Section",
      "type": "title",
      "description": "Section for configuring the tilted trail settings"
    },
    "tilt-enabled": {
      "name": "Enable Tilted Wave Trail",
      "type": "bool",
      "default": false,
      "description": "Enable/Disable wave trail tilting"
    },
    "tilt-x-offset": {
      "name": "Tilt X Offset",
      "type": "float",
      "default": 0,
      "min": -10,
      "max": 10,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.1,
        "big-arrow-step": 1
      }
    },
    "tilt-y-offset": {
      "name": "Tilt Y Offset",
      "type": "float",
      "default": 0,
      "min": -10,
      "max": 10,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.1,
        "big-arrow-step": 1
      }
    },
    "trail-fade-section": {
      "name": "Trail Fade Settings",
      "type": "title",
      "description": "Control how the wave trail fades in and out"
    },
    "enable-trail-fade": {
      "name": "Enable Trail Fade",
      "type": "bool",
      "default": false,
      "description": "Enables the trail fade-out effect"
    },
    "trail-fade-speed": {
      "name": "Trail Fade Speed",
      "type": "float",
      "default": 1.0,
      "min": 0.1,
      "max": 5.0,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.1,
        "big-arrow-step": 0.5
      },
      "description": "Controls how quickly the trail fades out"
    },
    "trail-min-opacity": {
      "name": "Minimum Trail Opacity",
      "type": "int",
      "default": 0,
      "min": 0,
      "max": 255,
      "control": {
        "slider": true
      },
      "description": "Sets the minimum opacity the trail will fade to"
    },
    "misc-section": {
      "type": "title",
      "name": "Misc Options"
    },
    "trail-thickness-variation": {
      "name": "Dynamic Thickness",
      "type": "bool",
      "default": false,
      "description": "Makes trail thickness vary based on speed"
    },
    "thickness-multiplier": {
      "name": "Thickness Speed Multiplier",
      "type": "float",
      "default": 0.5,
      "min": 0.1,
      "max": 2.0,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.1,
        "big-arrow-step": 0.25
      },
      "description": "How much speed affects trail thickness"
    },
    "sync-to-music": {
      "name": "Sync Color to Music",
      "type": "bool",
      "default": false,
      "description": "Ties color cycling to level time position for deterministic sync"
    },
    "trail-segments": {
      "name": "Enable Segmented Trail",
      "type": "bool",
      "default": false,
      "description": "Breaks trail into discrete segments instead of continuous"
    },
    "segment-persist": {
      "name": "Persist Trail Segments",
      "type": "bool",
      "default": false,
      "description": "Keeps trail segments visible through portals"
    },
    "segment-length": {
      "name": "Segment Length",
      "type": "float",
      "default": 10.0,
      "min": 5.0,
      "max": 50.0,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 1.0,
        "big-arrow-step": 5.0
      },
      "description": "Length of each trail segment"
    },
    "segment-gap": {
      "name": "Segment Gap",
      "type": "float",
      "default": 5.0,
      "min": 0,
      "max": 25.0,
      "control": {
        "slider": false,
        "input": true,
        "arrows": true,
        "big-arrows": true,
        "arrow-step": 0.5,
        "big-arrow-step": 2.5
      },
      "description": "Gap between each segment"
    },
    "display-mode": {
      "name": "Display Mode",
      "type": "int",
      "default": 1,
      "description": "0 = Gay mode, 1 = straight mode"
    },
    "verbose-logging": {
      "name": "Verbose logging",
      "type": "bool",
      "default": false,
      "description": "Enable verbose logging (for debugging purposes)"
    }
  },
  "resources": {
    "sprites": ["resources/*.png"],
    "fonts": {
      "FiraCodeNerdMono": {
        "path": "resources/firacodemono.ttf",
        "size": 64
      }
    }
  },
  "dependencies": {
    "eclipse.eclipse-menu": {
      "version": ">=v1.8.0",
      "required": false
    }
  },
  "links": {
    "homepage": "https://bearodactyl.dev",
    "source": "https://github.com/TheBearodactyl/gay-wave-trail"
  }
}
